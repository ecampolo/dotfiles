#!/bin/bash

bold=$(tput bold)
green=$(tput setaf 142);
orange=$(tput setaf 208);
red=$(tput setaf 167);
white=$(tput setaf 231);
yellow=$(tput setaf 214);

# Highlight the user name when logged in as root.
if [[ "${USER}" == "root" ]]; then
 PROMPT_USER_COLOR="${bold}${red}";
else
 PROMPT_USER_COLOR="${bold}${orange}";
fi;

# Highlight the hostname when connected via SSH.
if [[ "${SSH_TTY}" ]]; then
  PROMPT_DEVICE_COLOR="${bold}${red}";
else
  PROMPT_DEVICE_COLOR="${bold}${yellow}";
fi;

PROMPT_PREPOSITION_COLOR="${bold}${white}"
PROMPT_DIR_COLOR="${bold}${green}"
