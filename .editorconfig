root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.sh]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
